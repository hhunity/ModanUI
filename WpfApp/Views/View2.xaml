<UserControl x:Class="WpfApp.Views.View2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.ViewModels"
             mc:Ignorable="d">
    <Grid x:Name="MainGrid"
        Background="Transparent"
        MouseLeftButtonDown="MainGrid_MouseLeftButtonDown"
        MouseMove="MainGrid_MouseMove"
        MouseLeftButtonUp="MainGrid_MouseLeftButtonUp">
        <StackPanel Margin="10">
            <TextBlock Text="{Binding MouseX, StringFormat='X: {0:0}'}" FontSize="16"/>
            <TextBlock Text="{Binding MouseY, StringFormat='Y: {0:0}'}" FontSize="16"/>
            <TextBlock Text="{Binding DragX, StringFormat='Drag X: {0:0}'}" FontSize="16"/>
            <TextBlock Text="{Binding DragY, StringFormat='Drag Y: {0:0}'}" FontSize="16"/>
        </StackPanel>
    </Grid>
</UserControl>

